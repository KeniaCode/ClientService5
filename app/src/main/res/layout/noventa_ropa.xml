<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".IniciarVentaActivity">

    <requestFocus />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView2"
            fontPath="fonts/fuente.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="¿Por qué no vendió?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent" />


        <Spinner
            android:id="@+id/spinner_tipo_de_prenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:prompt="@string/seleccione_la_prenda_que_no_vendio"
            android:spinnerMode="dialog"/>

        <CheckBox
            android:id="@+id/checkBox_talla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Talla:" />

        <Spinner
            android:id="@+id/spinner_talla_ropa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:prompt="@string/seleccione_talla"
            android:spinnerMode="dialog"
          />

        <CheckBox
            android:id="@+id/checkBox_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Color:" />

        <Spinner
            android:id="@+id/spinner_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginBottom="12dp"
            android:prompt="@string/seleccione_un_color"
            android:spinnerMode="dialog"/>

        <TextView
            android:text="Otras Especificaciones:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            fontPath="fonts/fuente.ttf"
            />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText_comentario"
            android:layout_height="70dp"
            fontPath="fonts/fuente.ttf"
            />

    </LinearLayout>
</ScrollView>